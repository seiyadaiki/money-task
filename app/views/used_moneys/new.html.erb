<h1>Used Money</h1>
<%= form_with model:@used_money, local: true do |f| %>

<%= render 'shared/error_messages', model: f.object %>

  <div class="field">
    <%= f.label :when %>＊必須<br />
     <div class='input-default'>
      <%= raw sprintf(
                  f.date_select(
                    :date,
                    class:'select-when',
                    id:"date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2017,
                    end_year: (Time.now.year ),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
  
  </div>
  <div class="field">
    <%= f.label :where %><br />
    <%= f.text_field :location, class:"input-default", id:"location", placeholder:"雑貨屋etc." %>
  </div>
  <div class="field">
    <%= f.label :what %><br />
    <%= f.text_field :what, class:"input-default", id:"what", placeholder:"アクセサリーetc." %>
  </div>
  <div class="field">
    <%= f.label :how_much %>＊必須<br />
    <%= f.text_field :how_much, class:"input-default", id:"how_much", placeholder:"1000" %>
    <span>yen</span>
  </div>
  <div class="field">
    <%= f.label :way_id %>＊必須<br />
    <%= f.collection_select(:way_id, Way.all, :id, :name, {}, {class:"way-select"}) %>
  </div>
  <div class="field">
    <%= f.submit "SEND", class:"send-btn" %>
    <%= link_to "BACK_HOME", root_path, class:"back-btn"%>
  </div>
<% end %>
